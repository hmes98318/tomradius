{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "env.d.ts",
        "src-vue/**/*",
        "src-vue/@types/**/*.types.ts",
        "src-vue/**/*.vue",
        "src-vue/**/*/*.vue",
        "src-vue/stores/*",
        "src-vue/stores/*.ts",
    ],
    "exclude": [
        "src-vue/**/__tests__/*"
    ],
    "compilerOptions": {
        "composite": true,
        "noEmit": false,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src-vue/*"
            ]
        }
    }
}